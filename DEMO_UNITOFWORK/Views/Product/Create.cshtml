@model DEMO_UNITOFWORK.Models.Product
@{
    TempData["title"] = "List of product";
}
<h1>Create</h1>
<form asp-action="Create">
    <div class="mt-3 mt-3">
        <label>Product Name</label>
        <input type="text" asp-for="ProductName" class="form-control" placeholder="nhap ten Product" />
    </div>
    <div class="mt-3 mt-3">
        <label>Price</label>
        <input type="number" asp-for="Price" class="form-control" placeholder="nhap Price" />
    </div>
    <div class="mt-3 mt-3">
        <label>Discount</label>
        <input type="checkbox" asp-for="isDiscountApplied" class="form-check-input" />
    </div>
    <button type="submit">Create</button>
</form>